function fscloud_delete($fscloud){

	$fscloud_delete = db_delete('fscloud_messages')
					->condition('id', $fscloud)
					->execute();

					
		drupal_set_message( t('FSCloud deleted') );
		drupal_goto('admin/config/content/fscloud');

	return $fscloud_delete;
}


